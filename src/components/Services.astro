<style>
.services-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  align-items: start;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.services-left {
  position: sticky;
  top: 0;
  height: fit-content;
  padding: 5rem 2rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: transparent;
  z-index: 2;
}

.services-right {
  display: flex;
  flex-direction: column;
  gap: 4rem;
  padding: 5rem 2rem;
  padding-top: 7.5rem; /* Aligns with left column content */
  min-height: 300vh;
  z-index: 1;
}

.service-card {
  opacity: 0.3;
  transform: translateY(50px);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  view-transition-name: service-card;
  min-height: 400px;
  display: flex;
  align-items: center;
}

.service-card.in-view {
  opacity: 1;
  transform: translateY(0);
}

.service-card-content {
  width: 100%;
  min-height: 350px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.service-indicator.active {
  transform: scale(1.05);
  margin-left: 1rem;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.service-indicator.active .indicator-dot {
  transform: scale(1.5);
}

.service-indicator.active .indicator-text {
  font-weight: 600;
  font-size: 1.125rem;
  color: white;
}

@media (max-width: 768px) {
  #services {
    display: block;
    min-height: auto;
  }
  .services-wrapper {
    display: block;
    padding: 1rem;
  }
  .services-left {
    position: static;
    height: auto;
    padding: 2rem 1rem;
    margin-left: 0;
  }
  .services-indicators {
    display: none;
  }
  .services-right {
    padding: 1rem;
    padding-top: 1rem; /* Reset for mobile */
    min-height: auto;
    gap: 2rem;
  }
  
  .service-card {
    min-height: auto;
    opacity: 1;
    transform: none;
  }
  
  .service-card-content {
    min-height: auto;
    padding: 1.5rem;
  }
}
</style>

<script>
const observerOptions = {
  root: null,
  rootMargin: '-20% 0px -20% 0px',
  threshold: 0.3
};

const cardObserver = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('in-view');
      
      const serviceIndex = entry.target.getAttribute('data-service');
      document.querySelectorAll('.service-indicator').forEach(indicator => {
        indicator.classList.remove('active');
      });
      const indicator = document.querySelector(`.service-indicator[data-service="${serviceIndex}"]`);
      if (indicator) {
        indicator.classList.add('active');
      }
    } else {
      entry.target.classList.remove('in-view');
    }
  });
}, observerOptions);

document.querySelectorAll('.service-card').forEach(card => {
  cardObserver.observe(card);
});

document.querySelectorAll('.service-indicator').forEach(indicator => {
  indicator.addEventListener('click', () => {
    const serviceIndex = indicator.getAttribute('data-service');
    const targetCard = document.querySelector(`.service-card[data-service="${serviceIndex}"]`);
    
    if (targetCard) {
      targetCard.scrollIntoView({ 
        behavior: 'smooth',
        block: 'center'
      });
    }
  });
});
</script>