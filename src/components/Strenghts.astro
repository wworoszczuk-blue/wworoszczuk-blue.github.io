---
import Animation3 from "./Animation3.astro";
import Animation2 from "./Animation2.astro";
import Animation1 from "./Animation1.astro";
---

<section id="strengths" class="relative py-32 overflow-hidden">
  <div class="relative z-10 max-w-7xl mx-auto px-8 md:px-16 lg:px-32">
    <!-- HEADER -->
    <div class="text-center mb-20">
      <span
        class="inline-block text-elivion-green text-sm font-mono uppercase tracking-widest mb-4"
      >
        Why Elivion
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-header leading-tight">
        Proven expertise in delivering <span class="text-elivion-green"
          >scalable AI solutions for complex corporate environment</span
        >
      </h2>
    </div>

    <!-- GRID -->
    <div class="space-y-8 mb-32">
      <!-- 1 ROW -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- EXPERIENCE -->
        <div
          class="group p-8 border border-white/10 bg-white/5 rounded-2xl hover:border-white/20 transition-all duration-500"
        >
          <div
            class="w-12 h-12 bg-elivion-blue/20 rounded-xl flex items-center justify-center mb-6"
          >
            <span class="font-bold text-xl font-header">15+</span>
          </div>
          <h3 class="text-xl font-semibold mb-4">Years of Excellence</h3>
          <p class="text-slate-400 leading-relaxed">
            Specialists with 15+ years of experience in digital transformation
          </p>
        </div>

        <!-- AWARDS -->
        <div
          class="group p-8 border border-white/10 bg-white/5 rounded-2xl hover:border-white/20 transition-all duration-500"
        >
          <div
            class="w-12 h-12 bg-elivion-blue/20 rounded-xl flex items-center justify-center mb-6"
          >
            <span class="material-symbols-outlined"> award_star </span>
          </div>
          <h3 class="text-xl font-semibold mb-4">Award-Winning Projects</h3>
          <p class="text-slate-400 leading-relaxed">
            Recognized for excellence in corporate AI implementations and
            innovation
          </p>
        </div>

        <!-- TEAM -->
        <div
          class="group p-8 border border-white/10 bg-white/5 rounded-2xl hover:border-white/20 transition-all duration-500"
        >
          <div
            class="w-12 h-12 bg-elivion-blue/20 rounded-xl flex items-center justify-center mb-6"
          >
            <span class="material-symbols-outlined"> network_intel_node </span>
          </div>
          <h3 class="text-xl font-semibold mb-4">
            Multidisciplinary Excellence
          </h3>
          <p class="text-slate-400 leading-relaxed">
            Expert team covering AI engineering, data science, and corporate
            strategy
          </p>
        </div>
      </div>

      <!-- 2 ROW -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- INTEGRATION -->
        <div
          class="group p-8 border border-white/10 bg-white/5 rounded-2xl hover:border-white/20 transition-all duration-500"
        >
          <div
            class="w-12 h-12 bg-elivion-blue/20 rounded-xl flex items-center justify-center mb-6"
          >
            <span class="material-symbols-outlined"> layers </span>
          </div>
          <h3 class="text-xl font-semibold mb-4">
            Complex Integration Expertise
          </h3>
          <p class="text-slate-400 leading-relaxed">
            Strong experience in integrating AI into complex organizational
            environments
          </p>
        </div>

        <!-- FOCUS -->
        <div
          class="group p-8 border border-white/10 bg-white/5 rounded-2xl hover:border-white/20 transition-all duration-500"
        >
          <div
            class="w-12 h-12 bg-elivion-blue/20 rounded-xl flex items-center justify-center mb-6"
          >
            <span class="material-symbols-outlined"> center_focus_weak </span>
          </div>
          <h3 class="text-xl font-semibold mb-4">Enterprise-Grade Focus</h3>
          <p class="text-slate-400 leading-relaxed">
            Unwavering focus on impact, security, and scalability for enterprise
            solutions
          </p>
        </div>
      </div>
    </div>

    <!-- PROJECTS SECTION -->
    <div>
      <!-- HEADER -->
      <div class="text-center mb-16">
        <span
          class="inline-block text-elivion-green text-sm font-mono uppercase tracking-widest mb-4"
        >
          Examples of our projects
        </span>
        <h2 class="text-4xl md:text-5xl font-header mb-8">
          Selected collaborations
        </h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto leading-relaxed">
          in partnership with <b>BlueSoft sp z o.o.</b>
        </p>
      </div>

      <!-- GRID -->
      <div class="space-y-14">
        <!-- PROJECT 1 -->
        <div class="grid lg:grid-cols-2 gap-12 items-center group">
          <div class="space-y-6">
            <div class="flex items-center space-x-4 mb-2">
              <div class="w-3 h-3 bg-elivion-blue rounded-full"></div>
              <span
                class="text-elivion-green font-mono text-sm uppercase tracking-widest"
                >Leadership AI</span
              >
            </div>
            <h3 class="text-3xl font-header">
              AI Platform for Scalable Leadership Development
            </h3>
            <p class="text-lg text-slate-400 leading-relaxed">
              We contributed to the creation of an AI-powered platform designed
              to strengthen leadership capabilities for thousands of managers
              within a large corporate environment.
            </p>
            <ul class="space-y-3 text-slate-400">
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >Development conversations, recommends personalized learning
                  plans, integration with e-learning systems</span
                >
              </li>
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Real-time progress insights for HR and leaders</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >Scalable leadership development, greater employee engagement,
                  and reduced managerial workload</span
                >
              </li>
            </ul>
          </div>
          <div class="relative hidden lg:block">
            <Animation1 />
          </div>
        </div>

        <!-- PROJECT 2 -->
        <div class="grid lg:grid-cols-2 gap-12 items-center group">
          <div class="relative hidden lg:block">
            <Animation2 />
          </div>
          <div class="space-y-6 order-1 lg:order-2">
            <div class="flex items-center space-x-4 mb-2">
              <div class="w-3 h-3 bg-elivion-blue rounded-full"></div>
              <span
                class="text-green-400 font-mono text-sm uppercase tracking-widest"
                >Talent AI</span
              >
            </div>
            <h3 class="text-3xl font-header">
              Next-Generation Recruitment Powered by AI
            </h3>
            <p class="text-lg text-slate-400 leading-relaxed">
              We helped design an innovative recruitment process for a leading
              internship and graduate program that attracts thousands of
              applicants annually.
            </p>
            <ul class="space-y-3 text-slate-400">
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >Gamified, interactive recruitment experience engaging young
                  talent</span
                >
              </li>
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Fair candidate selection with reduced HR workload</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >Enhanced employer branding with unique candidate journey from
                  the very first stage</span
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- PROJECT 3 -->
        <div class="grid lg:grid-cols-2 gap-12 items-center group">
          <div class="space-y-6">
            <div class="flex items-center space-x-4 mb-2">
              <div class="w-3 h-3 bg-elivion-blue rounded-full"></div>
              <span
                class="text-green-400 font-mono text-sm uppercase tracking-widest"
                >Matching AI</span
              >
            </div>
            <h3 class="text-3xl font-header">
              AI-Driven Candidate Understanding and Matching
            </h3>
            <p class="text-lg text-slate-400 leading-relaxed">
              We supported the implementation of an AI-based platform for
              recruitment teams operating across multiple countries. It
              integrates with ATS systems, handles multiple languages, and
              ensures unbiased, consistent evaluation.
            </p>
            <ul class="space-y-3 text-slate-400">
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >Advanced AI matching analyzing resumes against job
                  requirements</span
                >
              </li>
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >Identify hidden competencies & generate personalizad
                  interview questions</span
                >
              </li>
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >80% reduction in CV screening time with improved accuracy</span
                >
              </li>
              <li class="flex items-start space-x-3">
                <svg
                  class="w-5 h-5 text-elivion-blue mt-0.5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span
                  >Faster feedback for candidates, enhancing their experience</span
                >
              </li>
            </ul>
          </div>
          <div class="relative hidden lg:block">
            <Animation3 />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
