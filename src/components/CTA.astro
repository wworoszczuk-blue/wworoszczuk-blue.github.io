<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,200,0,0&icon_names=mail,menu,close" />
</head>

<section id="contact" class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 md:px-8 lg:px-16 xl:px-32 py-16 sm:py-20 overflow-hidden text-white">

  <div aria-hidden="true" class="absolute inset-0 z-0 pointer-events-none overflow-hidden">
    <!-- FADE IN GRADIENT -->
    <div class="absolute inset-x-0 top-0 h-32 z-10 pointer-events-none
              bg-gradient-to-b from-elivion-bg to-transparent"></div>
    <!-- BACKGROUND GLOW -->
    <div
      class="absolute inset-0 pointer-events-none z-0 
            bg-[radial-gradient(at_100%_70%,theme(colors.elivion.blue)_30%,transparent_60%)]
            opacity-20 blur-3xl mix-blend-screen">
    </div> 
    <!-- FADE OUT GRADIENT -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent via-70% to-elivion-bg"></div>
  </div>

  <div class="relative z-10 w-full max-w-6xl mx-auto grid lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-16 items-center">

      <!-- LEFT COLUMN -->
      <div class="space-y-6 sm:space-y-8">
        <div>
          <span class="inline-block text-elivion-green text-sm font-mono uppercase tracking-widest mb-3 sm:mb-4">
            Get Started
          </span>
          <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-header leading-tight">
            Ready to Transform Your Organization with <span class="text-elivion-green">AI</span>?
          </h2>
        </div>
      </div>

      <!-- RIGHT COLUMN: -->
      <div class="relative">
        <div class="relative p-6 sm:p-8 bg-gradient-to-br from-white/5 to-white/[0.02] border border-white/10 rounded-3xl backdrop-blur-xl shadow-2xl">
          <form class="space-y-4 sm:space-y-6" action="/submit" method="POST">
            <div class="space-y-2">
              <label for="name" class="block text-sm font-medium text-slate-300">Full Name</label>
              <div class="relative">
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:border-elivion-green focus:ring-1 focus:ring-elivion-green transition-all duration-300"
                  placeholder="Enter your full name"
                />
                <div class="absolute inset-0 border border-elivion-green rounded-xl opacity-0 focus-within:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
              </div>
            </div>

            <div class="space-y-2">
              <label for="email" class="block text-sm font-medium text-slate-300">Email</label>
              <div class="relative">
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:border-elivion-green focus:ring-1 focus:ring-elivion-green transition-all duration-300"
                  placeholder="your@company.com"
                />
                <div class="absolute inset-0 border border-elivion-green rounded-xl opacity-0 focus-within:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
              </div>
            </div>

            <div class="space-y-2">
              <label for="message" class="block text-sm font-medium text-slate-300">How can we help?</label>
              <div class="relative">
                <textarea 
                  id="message" 
                  name="message" 
                  required
                  class="h-24 sm:h-32 md:h-40 w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:border-elivion-green focus:ring-1 focus:ring-elivion-green resize-none transition-all duration-300"
                  placeholder="Tell us about your AI challenges and goals..."
                ></textarea>
                <div class="absolute inset-0 border border-elivion-green rounded-xl opacity-0 focus-within:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
              </div>
            </div>

            <button
              type="submit"
              class="mx-auto group relative flex items-center justify-center w-full max-w-80 sm:max-w-96 px-4 sm:px-6 md:px-8 py-3 sm:py-4 rounded-2xl font-semibold
                    text-white bg-gradient-to-r from-emerald-400/20 via-cyan-400/20 to-emerald-400/20
                    border border-white/10 shadow-[0_0_30px_rgba(0,255,170,0.05)]
                    overflow-hidden transition-all duration-500 hover:scale-[1.02] sm:hover:scale-[1.05] hover:shadow-[0_0_45px_rgba(0,255,170,0.3)]"
            >
              <!-- FLASH EFFECT -->
              <span class="absolute inset-0 bg-gradient-to-r from-transparent via-emerald-400/40 to-transparent
                            translate-x-[-100%] group-hover:translate-x-[100%]
                            transition-transform duration-[1.2s] ease-in-out"></span>

              <!-- CONTENT -->
              <span class="relative z-10 flex items-center gap-2 sm:gap-3 text-sm sm:text-base">
                <span>Get in Touch</span>
                <span
                  class="material-symbols-outlined text-lg sm:text-xl transition-transform duration-300 ease-out
                        group-hover:translate-x-1 group-hover:scale-110">
                  <span class="material-symbols-outlined">
                    keyboard_double_arrow_right
                  </span>
                </span>
              </span>
            </button>
          </form>
        </div>
      </div>
  </div>
</section>

<style>
.animate-float {
  animation: float 8s ease-in-out infinite;
}

.animate-float-delayed {
  animation: float-delayed 10s ease-in-out infinite;
}

input:focus, textarea:focus {
  background: rgba(255, 255, 255, 0.08) !important;
}

button, input, textarea, a {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.backdrop-blur-xl {
  backdrop-filter: blur(20px);
}

@media (max-width: 360px) {
  #contact {
    padding-left: 1rem;
    padding-right: 1rem;
  }
}
</style>