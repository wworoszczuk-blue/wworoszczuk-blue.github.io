    <div class="grid lg:grid-cols-3 gap-12 items-start">
      
      <div class="lg:col-span-1">
        <div class="aspect-square bg-gradient-to-br from-elivion-green/10 to-blue-500/10 rounded-3xl border border-white/5 flex items-center justify-center p-3">
          <div class="text-center">
            <div class="w-full h-full bg-elivion-green/20 rounded-2xl flex items-center justify-center mx-auto mb-4">
